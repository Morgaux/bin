#!/bin/sh

#
# http://gitlab.com/morgaux/bin
#

##
# log a message to ~/var/log
##

while [ "$#" -gt 0 ]; do
	case $1 in
		"-h"|"--help")
			echo "log - log a message to ~/var/log"
			exit 0;;
		*)
			break;;
	esac
done

[ -d "$HOME/var" ] || mkdir -p "$HOME/var"

STAMP="$(date +%x' '%X)"
PARENT="$(ps -o comm= $PPID)"
MSG="$@"

[ ! "$MSG" = "" ] && echo "$STAMP : $PARENT : $MSG" >> ~/var/log

