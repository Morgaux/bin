#!/bin/sh
#http://gitlab.com/morgaux/bin

#
# Execute appropriate ufetch
#

OS_DETAILS="$(uname -a)"
for i in /etc/*release*
do
	[ -f "$i" ] && OS_DETAILS="$(cat /etc/*release*)"
	break
done

if [ ! -d "$HOME/.ufetch" ]
then
	git clone "https://gitlab.com/jschx/ufetch" ~/.ufetch >/dev/null 2>&1 || exit 1
fi

cd "$HOME/.ufetch" && exec "./ufetch-$(for OS in $(echo "ufetch-"* | tr ' -.' '\n  ' | awk '{print $2}'); do if echo "$OS_DETAILS" | grep -q -i "$OS"; then echo "$(echo "$OS_DETAILS" | tr ' ' '\n' | grep -i -c "$OS"):$OS"; fi done | sort -r -n | head -1 | tr ':' ' ' | awk '{print $2}')"

